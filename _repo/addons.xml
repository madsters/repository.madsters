<?xml version="1.0" encoding="UTF-8"?>
<addons>
    <addon id="repository.madsters" name="Madsters Repo" version="1.0.0" provider-name="madsters">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="Madsters Repo">
            <info compressed="false">https://raw.githubusercontent.com/madsters/repository.madsters/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/madsters/repository.madsters/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/madsters/repository.madsters/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Repo of Madsters.</summary>
            <description>Madsters Repo with the MagentaTV Skin and Freie Radios-Music-Addon</description>
            <platform>all</platform>
    </extension>
</addon>

<addon id="plugin.audio.freieradios" version="1.0.1" name="Freie Radios" provider-name="madsters">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>audio</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="de">Freie Radios aus Deutschland</summary>
  <description lang="de_DE">Livestreams von Freien Radios aus Deutschland: Freie Radios finanzieren sich meist rein durch Spenden und Mitwirkende sind Freiwillige.

	  Radio-Icon made by Freepik from www.flaticon.com
  </description>
  <disclaimer lang="de_DE">Livestream-Links von den offizielen Seiten.</disclaimer>
  <assets>
	<icon>icon.png</icon>
	<fanart>fanart.jpg</fanart>
	<screenshot>resources\screenshot-01.jpg</screenshot>
	<screenshot>resources\screenshot-02.jpg</screenshot>
    <screenshot>resources\screenshot-03.jpg</screenshot>
  </assets>
  <news>v1.0.1 [03/02/2020] Hinzufügen von Österreichischen Sendern
	  v1.0.0 [02/02/2020] Hello World</news>
</extension>
</addon>

<addon id="skin.magentatv" name="MagentaTV" provider-name="madster, jurialmunkey" version="1.0.1">
    <requires>
        <import addon="xbmc.gui" version="5.14.0" />
        <import addon="script.skinshortcuts" version="0.4.0" />
        <import addon="script.extendedinfo" version="3.0.0" />
        <import addon="script.image.resource.select" version="0.0.5" />
        <import addon="plugin.program.autocompletion" version="1.0.1" />
        <import addon="resource.images.studios.white" version="0.0.10" />
        <import addon="resource.images.moviegenreicons.transparent" version="0.0.6" />
    </requires>
    <extension debugging="false" defaultthemename="Textures.xbt" effectslowdown="1" point="xbmc.gui.skin">
        <res aspect="16:9" default="true" folder="1080i" height="1080" width="1920" />
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="de_DE">Telekom MagentaTV Skin.</summary>
        <description lang="de_DE">Ein Telekom Magenta TV Box Skin - based on Aura by jurialmunkey (Die Versionszahl ist bloß so hoch, damit Kodi nicht immer nach Updates jammert.</description>
        <platform>all</platform>
        <license>Creative Commons Attribution Non-Commercial Share-Alike 4.0</license>
        <forum>https://forum.kodi.tv/showthread.php?tid=328558</forum>
        <source>https://github.com/madsters/skin.aura</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
            <screenshot>resources/screenshot-01.jpg</screenshot>
            <screenshot>resources/screenshot-02.jpg</screenshot>
            <screenshot>resources/screenshot-03.jpg</screenshot>
            <screenshot>resources/screenshot-04.jpg</screenshot>
            <screenshot>resources/screenshot-05.jpg</screenshot>
        </assets>
    </extension>
</addon>
</addons>
